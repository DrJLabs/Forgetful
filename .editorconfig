# EditorConfig helps developers define and maintain consistent
# coding styles between different editors and IDEs
# editorconfig.org

# top-most EditorConfig file
root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

# Python files
[*.py]
indent_size = 4
max_line_length = 88

# JavaScript/TypeScript files
[*.{js,ts,jsx,tsx}]
indent_size = 2

# JSON files
[*.json]
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
insert_final_newline = false

# Docker files
[{Dockerfile,*.dockerfile}]
indent_size = 2

# Shell scripts
[*.sh]
indent_size = 2

# Configuration files
[*.{ini,cfg,conf,config}]
indent_size = 2

# SQL files
[*.sql]
indent_size = 2

# Makefile
[{Makefile,makefile}]
indent_style = tab
