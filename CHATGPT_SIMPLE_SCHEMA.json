        "responses": {
          "200": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/MemoryResponse"
                }
              }
            },
            "description": "Success"
          }
        },
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "summary": "Call Memory Tool"
      }
    }
