# ===============================================
# OpenMemory UI Environment Configuration
# ===============================================
# Copy this file to .env and customize for your environment
#
# Usage:
#   cp .env.example .env
#   # Edit .env with your actual values

# ===============================================
# FRONTEND CONFIGURATION (Next.js)
# ===============================================

# Next.js Public Environment Variables
NEXT_PUBLIC_API_URL=http://localhost:8765
NEXT_PUBLIC_USER_ID=your_username_here
NEXT_PUBLIC_ENVIRONMENT=development

# Build Information
NEXT_PUBLIC_BUILD_TIME=auto_generated
NEXT_PUBLIC_VERSION=1.0.0

# ===============================================
# APPLICATION CONFIGURATION
# ===============================================

# Application Settings
APP_USER_ID=your_username_here
APP_ENVIRONMENT=development
APP_DEBUG=true
APP_LOG_LEVEL=INFO

# ===============================================
# SERVICE CONFIGURATION
# ===============================================

# Service URLs
OPENMEMORY_API_URL=http://localhost:8765
OPENMEMORY_UI_URL=http://localhost:3000

# UI Server Settings
UI_PORT=3000

# ===============================================
# DEVELOPMENT CONFIGURATION
# ===============================================

# Development Settings
DEV_HOT_RELOAD=true
DEV_DEBUG_MODE=true

# ===============================================
# PRODUCTION CONFIGURATION
# ===============================================

# Production Settings
PROD_OPTIMIZE_BUNDLE=true
PROD_MINIFY_CSS=true
PROD_COMPRESS_IMAGES=true

# ===============================================
# EXAMPLES
# ===============================================

# Example 1: Development Configuration
# APP_USER_ID=drj
# NEXT_PUBLIC_USER_ID=drj
# NEXT_PUBLIC_ENVIRONMENT=development
# APP_DEBUG=true

# Example 2: Production Configuration
# APP_ENVIRONMENT=production
# APP_DEBUG=false
# NEXT_PUBLIC_ENVIRONMENT=production
# NEXT_PUBLIC_USER_ID=production_user
# PROD_OPTIMIZE_BUNDLE=true

# Example 3: Custom API URL
# NEXT_PUBLIC_API_URL=https://api.yourdomain.com
# OPENMEMORY_API_URL=https://api.yourdomain.com
